extends layout

include mixins/_storeCard

block content
  .inner
    h2 #{tag || 'All Stores'}
    ul.tags
      li.tag
        a.tag__link(href=`/tags`)
          span.tag__text= 'show all stores'
          span.tag__count= allStores.length
      each t in tags
        li.tag
          a.tag__link(href=`/tags/${t._id}` class=(t._id === tag ? 'tag__link--active' : ''))
            span.tag__text= t._id
            span.tag__count= t.count
  .stores
     each store in stores
       +storeCard(store)
